<!DOCTYPE html>
<html>
  <head>
    <title>ExamRails</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav>
      <ul>
        <% if current_user == nil%> 
          <%= link_to('Login', new_user_session_path) %>

          Or use <%= link_to image_tag("icons/twitter_32.png"), user_omniauth_authorize_path(:twitter), :id => "sign_in_with_twitter" %>

        <% else %>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
        <% end %>
      </ul>
    </nav>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>  
    <%= yield %>

  </body>
</html>
